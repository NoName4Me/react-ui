{
  "name": "@paper/react-ui",
  "version": "0.1.0",
  "main": "index.js",
  "repository": "git@github.com:NoName4Me/react-ui.git",
  "author": "NoName4Me <anich.evas@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "release": "yarn build && npm publish dist --tag latest",
    "prebuild": "rimraf dist",
    "build": "yarn build:cjs && yarn build:esm && yarn build:umd && yarn gen-dts:cjs && yarn gen-dts:esm",
    "build:cjs": "cross-env NODE_ENV=production BABEL_ENV=cjs babel --config-file ./babel.config.js ./src --extensions '.ts' --out-dir ./dist --ignore \"**/stories/*\"",
    "build:esm": "cross-env NODE_ENV=production BABEL_ENV=esm babel --config-file ./babel.config.js ./src --extensions '.ts' --out-dir ./dist/esm --ignore \"**/*.test.js\"",
    "build:umd": "cross-env NODE_ENV=production BABEL_ENV=umd rollup -c scripts/build/rollup.config.js",
    "gen-dts:cjs": "tsc --declaration --outDir dist/ --emitDeclarationOnly --noEmit false",
    "gen-dts:esm": "tsc --declaration --outDir dist/esm --emitDeclarationOnly --noEmit false",
    "test": "jest -c scripts/jest/jest.config.js",
    "test:ui": "jest -c scripts/jest/jest.ui.config.js",
    "test:cov": "jest --coverage",
    "format": "pretty-quick",
    "lint": "eslint src --ext .ts,.tsx,.js,.jsx --ignore-pattern 'src/**/stories'",
    "lint:fix": "yarn lint --fix",
    "tsc": "tsc -b",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "cz": "./node_modules/cz-customizable/standalone.js"
  },
  "lint-staged": {
    "src/**/*.*": [
      "npm run format",
      "git add"
    ],
    "src/**/!(*stories).{tsx,js,ts,jsx}": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "peerDependencies": {
    "react-dom": "^16.13.0",
    "react": "^16.13.0"
  },
  "dependencies": {
    "clsx": "^1.1.0",
    "prop-types": "^15.7.2",
    "react-transition-group": "^4.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-react": "^7.8.3",
    "@babel/preset-typescript": "^7.8.3",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@storybook/addon-actions": "^5.3.17",
    "@storybook/addon-docs": "^5.3.17",
    "@storybook/addon-info": "^5.3.17",
    "@storybook/addon-links": "^5.3.17",
    "@storybook/addon-storysource": "^5.3.17",
    "@storybook/addons": "^5.3.17",
    "@storybook/preset-typescript": "^2.1.0",
    "@storybook/react": "^5.3.17",
    "@types/jest": "^25.1.4",
    "@types/react-dom": "^16.9.5",
    "@types/react-transition-group": "^4.2.4",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "babel-loader": "^8.0.6",
    "cross-env": "^7.0.2",
    "css-loader": "^3.4.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "jest": "^25.1.0",
    "jest-image-snapshot": "^2.12.0",
    "node-sass": "^4.13.1",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "react": "^16.13.0",
    "react-docgen-typescript-loader": "^3.7.1",
    "react-dom": "^16.13.0",
    "react-is": "^16.13.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.0.6",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-sass": "^1.2.2",
    "rollup-plugin-terser": "^5.3.0",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.1.3",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "typescript": "^3.8.3"
  }
}
